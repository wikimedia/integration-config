FROM {{ "quibble-buster-php72" | image_tag }}

USER root


ENV PHP_VERSION=7.2
# Convenience symlink to make php-fpm.conf version agnostic
RUN ln -s /etc/php/$PHP_VERSION /etc/php/current

#############################
#  Debian packages we need  #
#############################
{% set deps|replace('\n', ' ') -%}
apache2
build-essential
ffmpeg
php${PHP_VERSION}-fpm
supervisor
{%- endset -%}

RUN {{ deps | apt_install }}

# Tell Apache how to process PHP files.
RUN a2enmod proxy_fcgi \
  && a2enmod mpm_event \
  && a2enmod rewrite \
  && a2enmod http2 \
  && a2enmod cache
COPY ./php-fpm/php-fpm.conf /etc/php/${PHP_VERSION}/fpm/php-fpm.conf
COPY ./php-fpm/www.conf /etc/php/${PHP_VERSION}/fpm/pool.d/www.conf
RUN install --directory -o nobody -g nogroup /tmp/php \
  && touch /tmp/fpm-php.www.log /tmp/php/php-fpm.pid \
  && chown nobody:nogroup /tmp/fpm-php.www.log /tmp/php/php-fpm.pid

COPY ./php-fpm/php.ini /etc/php/${PHP_VERSION}/fpm/php.ini
COPY ./apache/ports.conf /etc/apache2/ports.conf
COPY ./apache/000-default.conf /etc/apache2/sites-available/000-default.conf
COPY ./apache/apache2.conf /etc/apache2/apache2.conf
COPY ./apache/envvars /etc/apache2/envvars
COPY ./entrypoint.sh /entrypoint.sh
COPY ./supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Unprivileged
USER nobody
ENTRYPOINT ["/entrypoint.sh"]
